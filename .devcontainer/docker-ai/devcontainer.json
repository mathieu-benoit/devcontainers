{
    "name": "Docker & Docker Model Runner (DMR)",
    "dockerComposeFile": "compose.yaml",
    "service": "workspace",
    "workspaceFolder": "/workspace",
	"features": {
		"ghcr.io/devcontainers/features/docker-in-docker:2": {
			"moby": true,
			"version": "latest"
		}
	},
	"postCreateCommand": "bash .devcontainer/docker-ai/installMoreTools.sh",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-azuretools.vscode-containers",
				"docker.docker"
            ]
        }
    }
}